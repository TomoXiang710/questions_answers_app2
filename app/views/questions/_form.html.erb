<%= form_with(model: question) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '質問内容' %>
    <%= f.text_area :content, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>